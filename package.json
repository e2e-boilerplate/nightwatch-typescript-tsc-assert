{
  "name": "nightwatch-es6modules-babel-assert",
  "version": "1.0.0",
  "description": "nightwatch end-to-end test automation boilerplate, using ES6-modules, BabelJS and Assert.",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint --ext .js ./ --fix",
    "test": "npx nightwatch",
    "test-ci": "npx nightwatch -c nightwatch-ci.conf.js"
  },
  "keywords": [
    "nightwatch",
    "es6 modules",
    "babel",
    "boilerplate",
    "example"
  ],
  "author": "Girma Nigusse <xgirma@gmail.com> (https://github.com/xgirma)",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/plugin-transform-runtime": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/runtime": "7.8.4",
    "chromedriver": "79.0.3",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "nightwatch": "1.3.4",
    "prettier": "1.19.1"
  },
  "dependencies": {
    "@babel/register": "^7.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
